@{
    Layout = "_Layout";
    ViewData["Title"] = "Главная";
}

<h1 class="text-2xl font-bold mb-4">Добро пожаловать в Дневник питания!</h1>
<p>Здесь будет основное содержимое сайта.</p>

@section Sidebar {
    <aside class="w-1/4 p-4 bg-white shadow-lg rounded-lg">
        <h2 class="text-lg font-semibold mb-4">Добавить продукт</h2>

        <form id="addProductForm" method="post" asp-controller="FoodCul" asp-action="Create" class="space-y-3">
            <div>
                <label class="block text-sm font-medium">Категория</label>
                <select name="Category" class="w-full p-2 border rounded">
                    @foreach (var category in Enum.GetValues(typeof(FoodList.Domain.Enum.Categories)))
                    {
                        <option value="@category">@category</option>
                    }
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium">Название</label>
                <input type="text" name="Name" class="w-full p-2 border rounded" required>
            </div>

            <div>
                <label class="block text-sm font-medium">Калории</label>
                <input type="number" name="Calories" class="w-full p-2 border rounded" required>
            </div>

            <div>
                <label class="block text-sm font-medium">Белки</label>
                <input type="number" name="Protein" class="w-full p-2 border rounded" required>
            </div>

            <div>
                <label class="block text-sm font-medium">Жиры</label>
                <input type="number" name="Fats" class="w-full p-2 border rounded" required>
            </div>

            <div>
                <label class="block text-sm font-medium">Углеводы</label>
                <input type="number" name="Carbohydrates" class="w-full p-2 border rounded" required>
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded">
                Добавить
            </button>
        </form>
    </aside>

    <!-- Модальное окно ошибки -->
    <div id="errorModal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
        <div class="bg-white p-6 rounded-lg shadow-lg w-96 text-center">
            <p id="errorMessage" class="text-lg text-red-600"></p>
            <button id="closeModal" class="mt-4 px-4 py-2 bg-blue-500 text-white rounded">ОК</button>
        </div>
    </div>
}


